<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.unipampa.appavaliacoes">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".Service.Channel"
        android:allowBackup="true"
        android:icon="@mipmap/ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller.MainActivity"
            android:label="AppAvaliações">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Service.NotificationReceiver" />
        <activity android:name=".Controller.NotificationChannel" />
        <activity
            android:name=".Controller.AdicionarAvaliacaoActivity"
            android:label="Adicionar Avaliação" />
        <activity android:name=".Controller.AdiarNotificacao" />
        <activity android:name=".Controller.TipoNotificacao"
            android:label="Tipo de Notificação"/>
        <activity android:name=".Controller.EditarAvaliacaoActivity"></activity>
    </application>

</manifest>